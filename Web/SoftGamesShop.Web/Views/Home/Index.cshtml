@model SoftGamesShop.Web.ViewModels.Home.IndexViewModel


@{this.ViewData["Title"] = $"Welcome to SoftGames!"; }
<head>
    <style>
    body { background-image: url('https://cdn.wallpapersafari.com/82/19/F9ielj.jpg'); }
    </style>
</head>

<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
